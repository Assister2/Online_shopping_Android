<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="18dp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginEnd="18dp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:clickable="true"
    android:elevation="4dp"
    android:focusable="true"
    app:cardCornerRadius="@dimen/_10sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:paddingStart="@dimen/_8sdp">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_logo"
            android:layout_width="@dimen/_64sdp"
            android:layout_height="@dimen/_64sdp"
            android:background="@drawable/bg_curvede"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/cat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            android:text="Smart Watch"
            android:textColor="?colorPrimary"
            style="@style/BoldText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_logo"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_subcategory"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/bg_curved_window_tiny"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="@string/view_sub_categories"
            android:textAllCaps="false"
            style="@style/RegularText"
            android:textColor="?black"
            android:textSize="@dimen/_8ssp"
            app:layout_constraintStart_toStartOf="@+id/cat_name"
            app:layout_constraintTop_toBottomOf="@+id/cat_name" />

        <Button
            android:id="@+id/view_product"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_curved_window_tiny"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="@string/view_product"
            style="@style/RegularText" android:textAllCaps="false"
            android:textSize="@dimen/_8ssp"
            android:textColor="?black"
            app:layout_constraintBottom_toBottomOf="@+id/btn_subcategory"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_subcategory" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>