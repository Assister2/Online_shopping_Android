<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_layout_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?bgGreyShadow"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_not_signed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/MediumText"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="@string/not_sign_in"
        android:textAlignment="center"
        android:visibility="gone"
        android:textColor="?txtSecondary">

    </TextView>


    <RelativeLayout
        android:id="@+id/rlt_nav_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:visibility="gone"
        android:gravity="center_vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_user_image"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_women"
            app:riv_corner_radius="@dimen/_60sdp" />


        <TextView
            android:id="@+id/tv_hello"
            style="@style/RegularText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toEndOf="@+id/iv_user_image"
            android:ellipsize="end"
            android:paddingStart="@dimen/_15ssp"
            android:paddingEnd="@dimen/_10ssp"
            android:text="@string/hello"
            android:textSize="@dimen/_12sdp"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="?txtSecondary" />


        <TextView
            android:id="@+id/tv_user_name"
            style="@style/BoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_hello"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_toEndOf="@+id/iv_user_image"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingStart="@dimen/_15ssp"
            android:paddingEnd="@dimen/_10ssp"
            android:text=""
            android:textAlignment="viewStart"
            android:textColor="?txtSecondary"
            android:textSize="@dimen/_14sdp" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:background="?bgUnselect"
        android:layout_marginBottom="@dimen/_5sdp"/>


</LinearLayout>
