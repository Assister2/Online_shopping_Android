<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_15sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:windowBackground"
    app:cardCornerRadius="@dimen/_15sdp"
    android:elevation="@dimen/_15sdp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="@dimen/_14ssp"
            style="@style/BoldText"

            android:id="@+id/tv_custom__title"
            android:textColor="?txtPrimary"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_custom_message"
            android:layout_margin="@dimen/_10sdp"
            android:text=""
            style="@style/BoldText"
            android:textColor="?txtPrimary"
            android:textAlignment="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:visibility="gone"
            android:layout_below="@+id/tv_custom_message"
            android:id="@+id/common_buttons"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button_cancel"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                style="@style/MediumText"
                android:background="@drawable/bg_curved_fifth"
                android:text="@string/cancel"
                android:textColor="?txtPrimary" />
            <Button
                android:id="@+id/button_ok"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:padding="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textAllCaps="false"
                android:background="@drawable/bg_curved_primary"
                android:text="@string/ok"
                style="@style/MediumText"
                android:textColor="?txtSecondary" />
        </LinearLayout>
        <Button
            android:id="@+id/button_common_ok"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_40sdp"
            android:layout_gravity="center"
            android:visibility="visible"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_35sdp"
            android:padding="@dimen/_10sdp"
            style="@style/BoldText"
            android:textAllCaps="false"
            android:background="@drawable/bg_curved_primary"
            android:text="@string/ok"
            android:textColor="?txtSecondary" />

    </LinearLayout>
</androidx.cardview.widget.CardView>