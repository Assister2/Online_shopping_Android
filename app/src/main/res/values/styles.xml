        <item name="font_title">@font/google_sans_bold</item>
        <item name="font_regular_size">18sp</item>
    </style>

    <style name="BoldText" >
        <item name="android:fontFamily">@font/amazon_ember_bold</item>
        <item name="fontFamily">@font/amazon_ember_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MediumText">
        <item name="android:fontFamily">@font/amazon_ember_medium</item>
        <item name="fontFamily">@font/amazon_ember_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RegularText" >
        <item name="android:fontFamily">@font/amazon_ember_regular</item>
        <item name="fontFamily">@font/amazon_ember_regular</item>
        <item name="android:textSize">10sp</item>
    </style>


    <style name="SpinnerTheme">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/amazon_ember_regular</item>
        <item name="picker_selectedTextColor">@color/colorPrimary</item>
    </style>

    <style name="AmazonRegular" >
        <item name="android:fontFamily">@font/amazon_regular</item>
        <item name="fontFamily">@font/amazon_regular</item>
        <item name="android:textSize">12sp</item>

    </style>
    <style name="NavigationDrawerStyle">
        <item name="android:textSize">@dimen/_12ssp</item><!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">50dp</item><!-- item size in menu-->
        <item name="itemMaxLines">2</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@color/bg_grey_shadow</item>
        <item name="android:fontFamily">@font/amazon_ember_regular</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="listPreferredItemHeightSmall">50dp</item>
        <item name="fontFamily">@font/amazon_ember_regular</item>
    </style>
    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:layout_marginBottom">@dimen/_2sdp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>


    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="OrderDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="AppBottomSheetDialogThemeCurved"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle1</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

    <style name="AppModalStyle1" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_dialog</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat.DayNight">
        <item name="colorControlNormal">@color/rating_not_select</item>
        <item name="colorControlActivated">@color/rating</item>

    </style>

